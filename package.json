{
  "name": "ng-whiteboard",
  "version": "4.2.0",
  "license": "MIT",
  "scripts": {
    "ng": "nx",
    "start": "nx serve demo",
    "copy:readme": "copyfiles ./README.md ./projects/ng-whiteboard",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "yarn copy:readme && nx build ng-whiteboard --prod",
    "build:demo": "nx build demo --prod --base-href='https://mostafazke.github.io/ng-whiteboard/'",
    "format:check": "nx format:check",
    "format:write": "nx format:write",
    "test": "yarn test:lib && yarn test:demo",
    "test:ci": "nx test ng-whiteboard  --configuration=ci",
    "test:lib": "nx test ng-whiteboard --codeCoverage --watchAll",
    "test:demo": "nx test demo --codeCoverage --watchAll",
    "report-coverage:lib": "cat ./coverage/ng-whiteboard/lcov.info | codecov",
    "publish:demo": "npx angular-cli-ghpages --dir=./dist/demo",
    "publish:lib": "npx semantic-release",
    "adjust-version": "concurrently \"yarn:adjust-version:*\"",
    "adjust-version:lib": "replace-json-property projects/ng-whiteboard/package.json version $VERSION",
    "adjust-version:main": "replace-json-property package.json version $VERSION",
    "semantic-release": "semantic-release",
    "cm": "npx git-cz"
  },
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/service-worker": "^17.3.0",
    "firebase": "11.5.0",
    "highlight.js": "~11.11.0",
    "ngx-colors": "^3.6.0",
    "perfect-freehand": "^1.2.2",
    "rxjs": "~7.8.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.11",
    "@angular-devkit/core": "^17.3.11",
    "@angular-devkit/schematics": "~17.3.11",
    "@angular-eslint/eslint-plugin": "~17.5.3",
    "@angular-eslint/eslint-plugin-template": "~17.5.3",
    "@angular-eslint/template-parser": "~17.5.3",
    "@angular/cli": "^17.3.11",
    "@angular/compiler-cli": "^17.3.0",
    "@angular/language-service": "~17.3.12",
    "@angular/pwa": "~17.3.11",
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "^9.8.0",
    "@nx/angular": "20.3.0",
    "@nx/cypress": "20.3.0",
    "@nx/eslint": "20.3.0",
    "@nx/eslint-plugin": "20.3.0",
    "@nx/jest": "20.3.0",
    "@nx/js": "20.3.0",
    "@nx/web": "20.3.0",
    "@nx/workspace": "20.3.0",
    "@schematics/angular": "~19.0.0",
    "@semantic-release/changelog": "~6.0.3",
    "@semantic-release/commit-analyzer": "~13.0.0",
    "@semantic-release/exec": "~6.0.3",
    "@semantic-release/git": "~10.0.1",
    "@semantic-release/github": "~11.0.1",
    "@semantic-release/npm": "~12.0.1",
    "@semantic-release/release-notes-generator": "~14.0.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@theunderscorer/nx-semantic-release": "2.12.0",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@typescript-eslint/utils": "^8.13.0",
    "angular-eslint": "^19.0.2",
    "autoprefixer": "^10.4.0",
    "canvas": "^3.1.0",
    "codecov": "^3.8.3",
    "concurrently": "9.1.0",
    "copyfiles": "2.4.1",
    "cypress": "^13.13.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^3.5.0",
    "git-cz": "4.9.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-preset-angular": "~14.4.0",
    "jsonc-eslint-parser": "^2.1.0",
    "ng-packagr": "^17.3.0",
    "nx": "20.3.0",
    "postcss": "^8.4.5",
    "postcss-url": "~10.1.3",
    "prettier": "^2.6.2",
    "replace-json-property": "^1.9.0",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.4.2",
    "typescript-eslint": "^8.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mostafazke/ng-whiteboard.git"
  },
